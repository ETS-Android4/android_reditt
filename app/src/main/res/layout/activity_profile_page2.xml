<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/backk"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:translationY="10dp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_baseline_dehaze_24"
                    android:translationX="340dp"
                    android:translationY="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="135dp"
                    android:layout_height="169dp"
                    android:src="@drawable/photo1"
                    android:translationX="30px" />


                <Button
                    android:id="@+id/modifyprofile"
                    android:layout_width="94dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_stroke"
                    android:fontFamily="@font/acme"
                    android:text="Modifier"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:translationX="160dp"
                    android:translationY="90dp"></Button>

            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="UserName@1"
                android:textColor="@color/white"
                android:textSize="70px"
                android:textStyle="normal"
                android:translationX="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="u/ @UserName@1 - "
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:translationX="30px" />

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/calendar"
                    android:translationX="10px" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:translationX="30px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/position"
                    android:translationX="7dp"/>

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Live in Country"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:translationX="20px"
                    android:translationY="10px" />

            </LinearLayout>


            <Button

                android:id="@+id/modifyPhoto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_stroke"
                android:fontFamily="@font/acme"
                android:text=" Modifier la photo de profile"
                android:textColor="@color/white"

                android:textSize="15dp"
                android:translationY="15dp">


            </Button>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="131dp"
                android:layout_height="55dp"
                android:background="@drawable/radius_btn"
                android:backgroundTint="#DDD7D7"
                android:fontFamily="@font/acme"
                android:text="Publications"
                android:textColor="#000000"
                android:textSize="16sp"></Button>

            <Button
                android:layout_width="131dp"
                android:layout_height="55dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radius_btn"
                android:backgroundTint="#DDD7D7"
                android:fontFamily="@font/acme"
                android:text="Commentaires"
                android:textColor="#000000"
                android:textSize="16sp"></Button>

            <Button
                android:layout_width="131dp"
                android:layout_height="55dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radius_btn"
                android:backgroundTint="#DDD7D7"
                android:fontFamily="@font/acme"
                android:text="Ã  propos"
                android:textColor="#000000"
                android:textSize="16sp"></Button>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="130dp"
            android:fontFamily="@font/acme"
            android:text="Woauh, c'est vide"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>