<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfoModifyActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1">


        <ImageView
            android:id="@+id/returnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:translationY="20dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:src="@drawable/photo1"
                android:translationX="140dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:fontFamily="@font/acme"

                android:text="Username :"
                android:textColor="#FFFFFF"
                android:textColorHint="#D51010"
                android:textSize="17sp"
                android:translationX="40dp"
                android:translationY="200dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Taper un nom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#C6C4C4"
                android:textColorHint="#D6D3D3"
                android:textSize="14sp"
                android:translationX="155dp"
                android:translationY="185dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/acme"

                android:text="Currentpass :"
                android:textColor="#FFFFFF"
                android:textColorHint="#D51010"
                android:textSize="17sp"
                android:translationX="40dp"
                android:translationY="240dp" />

            <EditText
                android:id="@+id/currentpass"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Taper un nom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#C6C4C4"
                android:textColorHint="#D6D3D3"
                android:textSize="14sp"
                android:translationX="155dp"
                android:translationY="225dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:fontFamily="@font/acme"

                android:text="Newpass :"
                android:textColor="#FFFFFF"
                android:textColorHint="#D51010"
                android:textSize="17sp"
                android:translationX="40dp"
                android:translationY="280dp" />

            <EditText
                android:id="@+id/newpass"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Taper un nom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#C6C4C4"
                android:textColorHint="#D6D3D3"
                android:textSize="14sp"
                android:translationX="155dp"
                android:translationY="265dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:fontFamily="@font/acme"

                android:text="Country :"
                android:textColor="#FFFFFF"
                android:textColorHint="#D51010"
                android:textSize="17sp"
                android:translationX="40dp"
                android:translationY="370dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn"
                android:contentDescription="@string/app_name"
                android:minHeight="48dp"
                android:translationX="155dp"
                android:translationY="360dp" />

            <Button

                android:id="@+id/accept"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn"
                android:backgroundTint="#7AEF61"
                android:fontFamily="@font/acme"
                android:text="Accept"
                android:textColor="#000000"
                android:textSize="18sp"
                android:translationX="160dp"
                android:translationY="500dp" />


        </RelativeLayout>




    </RelativeLayout>

</LinearLayout>